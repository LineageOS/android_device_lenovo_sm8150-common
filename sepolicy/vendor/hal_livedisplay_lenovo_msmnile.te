type hal_livedisplay_lenovo_msmnile, domain;
hal_server_domain(hal_livedisplay_lenovo_msmnile, hal_lineage_livedisplay)

type hal_livedisplay_lenovo_msmnile_exec, exec_type, vendor_file_type, file_type;
init_daemon_domain(hal_livedisplay_lenovo_msmnile)

# Allow hal_livedisplay_lenovo_msmnile to use vendor-binder service
vndbinder_use(hal_livedisplay_lenovo_msmnile)

# Allow hal_livedisplay_lenovo_msmnile to call hal_sensors_default via binder
binder_call(hal_livedisplay_lenovo_msmnile, hal_graphics_composer_default)

# Allow hal_livedisplay_lenovo_msmnile to find vendor_qdisplay_service
allow hal_livedisplay_lenovo_msmnile vendor_qdisplay_service:service_manager find;

# Allow hal_livedisplay_lenovo_msmnile to write to DisplayMode nodes
allow hal_livedisplay_lenovo_msmnile sysfs_graphics:dir r_dir_perms;
allow hal_livedisplay_lenovo_msmnile vendor_sysfs_graphics:file rw_file_perms;
